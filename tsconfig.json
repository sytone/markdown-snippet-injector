{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ES6",
      "ES2015",
      "ESNext"
    ],
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}